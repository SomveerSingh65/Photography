@model IEnumerable<Photography.Models.BookingModel>
<h2> Bookings</h2>
<table class="table" >
    <thead>
        <tr>
            <th>Customer Name</th>
            <th>Photographer Name</th>
            <th>Date</th>
            <th>Event Type</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var booking in Model)
        {
            <tr>
                <td>@booking.CustomerName</td>
                <td>@booking.PhoographerName</td>
                <td>@booking.Date</td>
                <td>@booking.EventType</td>
                <td>
                    <a href="@Url.Action("Edit", "Booking", new { id = booking.BookingId })" class="btn btn-warning">Edit</a>

                    <form method="post" action="@Url.Action("DeleteConfirmed", "Booking", new { id = booking.BookingId })" style="display:inline;">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this booking?')">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

   
